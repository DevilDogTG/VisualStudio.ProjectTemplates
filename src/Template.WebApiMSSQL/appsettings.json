{
  "Configuration": {
    "EnableSwagger": true
  },
  "ConnectionStrings": {
    "DBConnectionString": "Data Source=[Host];Initial Catalog=[DbName];User ID=[Uid];Password=[Pwd];TrustServerCertificate=True"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Enrichers.AspNetCore.RequestHeader" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Error",
        "System": "Error"
      }
    },
    "Enrich": [
      {
        "Name": "WithHeaderCorrelationId",
        "Args": {
          "keyName": "X-Correlation-ID",
          "generatedWhenNotExist": true,
          "generatedFormat": "N"
        }
      }
    ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/logging..log",
          "fileSizeLimitBytes": 102400000,
          "flushToDiskInterval": "00:00:01",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": "true",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}][{CorrelationId}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
